{
  "servers": [
    {
      "port": 8000,
      "options": {
        "labels": ["http"]
      }
    },
    {
      "port": 8001,
      "options": {
        "labels": ["api"]
      }
    }
  ],
  "plugins": {
    "good": {
      "gcDetection": true,
      "opsInterval": 30000,
      "subscribers": {
        "console": ["request", "log", "ops", "error"]
      }
    },
    "tv": {},
    "yar": [{
      "select": ["http"],
      "options": {
        "cookieOptions": {
          "password": "password",
          "isSecure": false
        }
      }
    }],
    "lout": [{
      "select": ["api"]
    }],
    "crumb": [{
      "select": ["http"],
      "options": {
        "restful": true,
        "autoGenerate": false
      }
    }],
    "auth": {
      "google": {
        "realm": "http://localhost:8000/",
        "callbackUrl": "http://localhost:8000/auth/google/callback"
      }
    },
    "todo": [{
      "select": ["api"]
    }],
    "ui": [{
      "select": ["http"],
      "options": {
        "serviceUri": "http://localhost:8001"
      }
    }]
  }
}
